<div class="add-category add-data">
  <h1>Edit Category</h1>
  <%=form_for @category do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name,:class=> 'form-control' %>
      </div>
      <%= f.submit :class => "btn btn-primary form-control" %>
      <%= flash['message']%>
  <% end %>
</div>
